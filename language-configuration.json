// This file controls the following features:
// Comment toggling
// Brackets definition
// Autoclosing
// Autosurrounding
// Folding
// Word pattern
// Indentation Rules
// https://code.visualstudio.com/api/language-extensions/language-configuration-guide
{
  "comments": {
    // symbol used for single line comment. Remove this entry if your language does not support line comments
    "lineComment": "#",
  },
  // symbols used as brackets
  // updated for FPP brackets (note, brackets are also apart of symbol tokens in FPP)
  "brackets": [
    [
      "[",
      "]"
    ]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "\"\"\"",
      "\"\"\""
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ]
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ]
  ],
  // fold and unfold regions defined by start and end markers
  "folding": {
    "markers": {
      "start": "^\\s*<\\s*REGION\\s*\\w*\\s*>",
      "end": "^\\s*<\\s*ENDREGION\\b\\s*>"
    }
  },
  "wordPattern": "([^\\s\\{\\}\\[\\]\\(\\)\\/\\\\\\#\\@\\*\\+\\-\\=\\;\\:\\'\\&\\~\\!\\%\"\\,\\.\\<\\>\\?\\|\\`\\^]+)|(-?\\d*.\\d*)",
  //Indent or decreases indent when pattern is found
  "indentationRules": {
    "increaseIndentPattern": "\\(|\\{}|\\{|\\(\\)\\{|\\[|\\/\/", //Something into ( or something into { or something into \
    "decreaseIndentPattern": "}",
    //"indentNextLinePattern": "\\(|\\/\/",
    //"unIndentedLinePattern": "}|}\\(\\)\\{" //an if else statement if (,,) {..} else {..}
  },
  //Rules on enter key press
  "onEnterRules": [
    {
      "beforeText": "\\(|\\{|\\[",
      "action": {
        "indent": "indentOutdent"
      }
    }
  ]
}