{
  "name": "fpp",
  "displayName": "FPP Tools",
  "description": "F Prime Prime Language Support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "NASA JPL, in collaboration with UNLV CS",
  "license": "To be added",
  "repository": {
	  "type": "git",
	  "url": "To be added"
  },
  "homepage": "",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages",
	"Formatters",
	"Other"
  ],
  "keywords": [
	  "fpp",
	  "f''",
	  "f``",
	  "f prime prime",
	  "f prime"
  ],
  "preview": true,
  "activationEvents": [
    "onCommand:fpp.example",
	"onCommand:fpptools.filenames",
	"onCommand:fpptools.fromxml",
    "onLanguage:fpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fpp.example",
        "title": "F``: Example"
      },
	  {
		  "command": "fpptools.check",
		  "title": "Check Semantics",
		  "category": "F`` Tools"
	  },
	  {
		  "command": "fpptools.filenames",
		  "title": "Write File Names",
		  "category": "F`` Tools"
	  },
	  {
		  "command": "fpptools.syntax",
		  "title": "FPP to AST",
		  "category": "F`` Tools"
	  },
	  {
			"command": "fpptools.fromxml",
			"title": "fpp from XML",
			"category": "F`` Tools"
	  }
    ],
    "languages": [
      {
        "id": "fpp",
        "aliases": [
          "FPP",
          "fpp",
          "F``",
          "f``",
          "F Prime Prime",
          "f prime prime"
        ],
        "extensions": [
          ".fpp",
		  ".fppi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fpp",
        "scopeName": "source.fpp",
        "path": "./syntaxes/fpp.tmLanguage.json"
      }
    ],
	"semanticTokenScopes": [{
		"language": "fpp",
		"scopes": {
			"true": ["boolean.fpp"],
			"false": ["boolean.fpp"],
			"U16": ["integer.fpp"],
			"U32": ["integer.fpp"],
			"U64": ["integer.fpp"],
			"U8": ["integer.fpp"],
			"I16": ["integer.fpp"],
			"I32": ["integer.fpp"],
			"I64": ["integer.fpp"],
			"I8": ["integer.fpp"],
			"F32": ["storage.fpp"],
			"F64": ["storage.fpp"],
			"type": ["support.fpp"],
			"instance": ["support.fpp"],
			"id": ["storage.fpp"],
			"opcode": ["storage.fpp"],
			"port": ["storage.fpp"],
			"command": ["storage.fpp"],
			"phase": ["storage.fpp"],
			"array": ["storage.fpp"],
			"queue": ["storage.fpp"],
			"stack": ["storage.fpp"],
			"enum": ["storage.fpp"],
			"struct": ["storage.fpp"],
			"topology": ["storage.fpp"],
			"param": ["storage.fpp"],
			"module": ["storage.fpp"],
			"component": ["storage.fpp"],
			"connections": ["storage.fpp"],
			"orange": ["keyword.fpp"],
			"yellow": ["keyword.fpp"],
			"red": ["keyword.fpp"],
			"match": ["keyword.fpp"],
			"throttle": ["keyword.fpp"],
			"cpu": ["keyword.fpp"],
			"severity": ["keyword.fpp"],
			"format": ["keyword.fpp"],
			"activity": ["keyword.fpp"],
			"warning": ["keyword.fpp"],
			"diagnostic": ["keyword.fpp"],
			"fatal": ["keyword.fpp"],
			"serial": ["keyword.fpp"],
			"async": ["keyword.fpp"],
			"guarded": ["keyword.fpp"],
			"sync": ["keyword.fpp"],
			"event": ["keyword.fpp"],
			"telemetry": ["keyword.fpp"],
			"text": ["keyword.fpp"],
			"time": ["keyword.fpp"],
			"assert": ["keyword.fpp"],
			"block": ["keyword.fpp"],
			"drop": ["keyword.fpp"],
			"at": ["keyword.fpp"],
			"get": ["keyword.fpp"],
			"set": ["keyword.fpp"],
			"save": ["keyword.fpp"],
			"update": ["keyword.fpp"],
			"always": ["keyword.fpp"],
			"change": ["keyword.fpp"],
			"on": ["keyword.fpp"],
			"with": ["keyword.fpp"],
			"size": ["keyword.fpp"],
			"import": ["keyword.fpp"],
			"include": ["keyword.fpp"],
			"high": ["keyword.fpp"],
			"low": ["keyword.fpp"],
			"input": ["keyword.fpp"],
			"output": ["keyword.fpp"],
			"recv": ["keyword.fpp"],
			"reg": ["keyword.fpp"],
			"resp": ["keyword.fpp"],
			"base": ["keyword.fpp"],
			"internal": ["keyword.fpp"],
			"priority": ["keyword.fpp"],
			"ref": ["keyword.fpp"],
			"default": ["keyword.fpp"],
			"locate": ["keyword.fpp"],
			"constant": ["keyword.fpp"],
			"private": ["keyword.fpp"],
			"health": ["keyword.fpp"],
			"active": ["keyword.fpp"],
			"passive": ["keyword.fpp"],
			"queued": ["keyword.fpp"]
		}
	}]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "@vscode/test-electron": "^2.0.3"
  }
}