{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "FPP",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "\\#",
					"end": "\\n",
					"name": "comment.line.number-sign.fpp"
				},
				{
					"begin": "\\@",
					"end": "\\n",
					"name": "comment.line.at-sign.fpp"
				}	
		]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fpp",
				"match": "\\b(hello|world|HelloWorld)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.fpp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.fpp",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.fpp"
}